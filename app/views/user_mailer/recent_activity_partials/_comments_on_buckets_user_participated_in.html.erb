<li id="comments-on-buckets-user-participated-in">
  <% if comments_grouped_by_bucket.length > 1 %>
    <p><b><%= comments_grouped_by_bucket.length %> Buckets</b> you participated in were <b>commented on</b>:</p>
  <% else %>
    <p><b>1 Buckets</b> you participated in was <b>commented on</b>:</p>
  <% end %>

  <ul style="list-style: none">
    <% comments_grouped_by_bucket.each do |bucket, comments| %>
      <li style="margin-bottom: 10px">
        <a href="<%= "#{root_url}#/buckets/#{bucket.id}" %>"><b><%= bucket.name %></b></a><br>
        <% comments.each do |comment| %>
          <%= comment.user.name %><br>
          "<%= comment.body %>"<br><br>
        <% end %>
      </li>
    <% end %>
  </ul>
</li>
